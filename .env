# Server
MODE=DEV
TZ=UTC
SERVER_ADDRESS=0.0.0.0:8080

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chatdb
POSTGRES_USER=chat
POSTGRES_PASSWORD=chat
DATABASE_URL=postgres://chat:chat@postgres:5432/chatdb?sslmode=disable

# Scylla/Cassandra
CASSANDRA_HOSTS=scylla
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=chat_keyspace
USE_SCYLLADB=true

# Redis
REDIS_ADDR=redis:6379
REDIS_URL=redis://redis:6379

# NATS
NATS_URL=nats://nats:4222

# Chat encryption (dev only)
chat.key=0123456789abcdef0123456789abcdef
chat.iv=0123456789abcdef

# gRPC client addresses
grpc.clientAddresses.chat-messages=http://localhost:8080
